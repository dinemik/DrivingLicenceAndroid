<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" 
              android:background="@drawable/drivingapplicationbackground">

    <FrameLayout android:layout_width="match_parent" 
                 android:layout_height="40dp">
     
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent" 
                      android:orientation="horizontal" 
                      android:gravity="right">

           <ImageView android:layout_width="40dp"
                      android:layout_height="40dp" 
                      android:src="@drawable/question40x40" 
                      android:id="@+id/HelpImg" 
                      android:layout_marginRight="10dp"/>

           <TextView android:layout_width="wrap_content"
                     android:layout_height="40dp"
                     android:text="30 min"
                     android:id="@+id/TimeTxt"
                     android:layout_marginTop="5dp"
                     android:textSize="20dp" 
                     android:textColor="#fff"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content" 
                 android:background="@drawable/categorycard"                      
                 android:layout_margin="5dp" >>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="#fff"
                  android:text="Questuin" 
                  android:layout_margin="10dp" 
                  android:id="@+id/QuestionTxt"/>

    </FrameLayout>

    <FFImageLoading.Views.ImageViewAsync android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:layout_margin="10dp"
                                         android:id="@+id/QuestionImg"
                                         android:layout_gravity="center"
                                         android:background="@drawable/categorycard" />

     <FrameLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content" 
                  android:layout_gravity="right">
    
           <ImageView android:layout_width="40dp"
                      android:layout_height="40dp" 
                      android:id="@+id/NextQuestImg"
                      android:src="@drawable/NextDrivingApp" 
                      android:layout_marginRight="10dp"/>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:layout_height="wrap_content" 
                                            android:id="@+id/QuestionsRecView"/>

</LinearLayout>
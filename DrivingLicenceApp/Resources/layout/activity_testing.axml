<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" 
              android:background="@drawable/roadway2">

    <FrameLayout android:layout_width="match_parent" 
                 android:layout_height="130dp">
     
       


            <android.support.v7.widget.CardView
             xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="5dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:alpha="0.8">

               <CheckBox android:layout_width="match_parent"
                         android:layout_height="match_parent"
                android:gravity="center"
                         android:text="შემდეგზე გადასვლა" 
                         android:buttonTint="#fff"
                         android:textColor="#fff" 
                         
                         android:id="@+id/AutoChange"/>

        </android.support.v7.widget.CardView>

            <FrameLayout android:layout_width="wrap_content"
                         android:layout_height="wrap_content" 
                         android:layout_gravity="center" 
                         android:layout_marginRight="30dp">
                
                <LinearLayout android:layout_width="220dp"
                              android:layout_height="50dp" 
                              android:gravity="center"
                android:layout_marginTop="40dp"
                             >

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content" 
                              android:text="0" 
                              android:textColor="#fff" 
                              android:id="@+id/NextQuest" />

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content" 
                              android:text="-დან " 
                              android:textColor="#fff" />

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content" 
                              android:text="0" 
                              android:textColor="#fff" 
                              android:id="@+id/AllQuestions" 
                              android:layout_marginRight="10dp"/>

                          <android.support.v7.widget.CardView
                     xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="60dp"
                                   android:layout_height="40dp"
                                   app:cardCornerRadius="10dp"
                                   app:cardElevation="5dp"
                                   app:cardBackgroundColor="#840000"
                                   android:alpha="0.8"
                                   android:layout_marginRight="5dp"
                                   android:layout_gravity="center"
                                   >


                          <TextView android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" 
                        android:layout_gravity="center"
                        
                                    android:text="0" 
                                    android:textColor="@android:color/white" 
                                    android:id="@+id/FiledAnswers"/>
                      

                    </android.support.v7.widget.CardView>

                   

                   <android.support.v7.widget.CardView
                     xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="60dp"
                                   android:layout_height="40dp"
                                   app:cardCornerRadius="10dp"
                                   app:cardElevation="5dp"
                                   app:cardBackgroundColor="#028400"
                                   android:alpha="0.8"
                                   android:layout_marginLeft="5dp"
                                   android:layout_gravity="center"
                                   >

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content" 
                              android:layout_gravity="center"
                              
                              android:text="0" 
                              android:textColor="@android:color/white"
                              android:id="@+id/CorrectAnswers"/>

                </android.support.v7.widget.CardView>

               </LinearLayout>
            
            </FrameLayout>
           
          <android.support.v7.widget.CardView
             xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
           android:layout_marginRight="175dp"
            android:layout_marginTop="22dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:alpha="0.7"
            android:layout_gravity="center"
         >

           <ImageView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:scaleType="fitXY"
                      android:src="@drawable/Lampicon" 
                      android:id="@+id/HelpImg" 
                      />

       </android.support.v7.widget.CardView>

         <android.support.v7.widget.CardView
             xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
           android:layout_marginLeft="160dp"
            android:layout_marginTop="22dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#8e8a00"
            android:alpha="0.7"
            android:layout_gravity="center"
         >

           <TextView android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                android:layout_gravity="center"
                     android:text="30 min"
                     android:id="@+id/TimeTxt"
                     android:textSize="22dp" 
                     android:textColor="#fff"/>

       </android.support.v7.widget.CardView>

    </FrameLayout>

    <android.support.v4.view.ViewPager android:layout_width="match_parent"
                                       android:layout_height="match_parent" 
                                       android:id="@+id/TicketsPager"/>

